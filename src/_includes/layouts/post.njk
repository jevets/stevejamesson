{% extends "layouts/base.njk" %}

{% block main %}
<div class="container">
  <article class="post">
    <header class="post-header">
      <h1 class="post-title">{{ title }}</h1>
      <time class="post-pubdate" datetime="{{ page.date | machineDate }}">
        {{ page.date | readableDate }}
      <time>
    </header>
    <div class="content post-content">
      {{ content | safe }}
    </div>
  </article>
</div>
{% endblock %}
