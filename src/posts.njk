---
title: Posts
layout: layouts/base
---

<div class="container">
  <h1>All Posts</h1>

  {% for post in collections.posts %}
    <div class="my-4">
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <time class="text-sm text-gray-900 ml-4" datetime="{{ post.date | machineDate }}">{{ post.date | readableDate }}</time>
    </div>
  {% endfor %}
</div>
